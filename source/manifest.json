{
   "browser_action": {
      "default_icon": "favicon.png",
      "default_popup": "popup.html"
   },
   "content_scripts": [{
      "js": [ "popup.js" ],
      "matches": [ "<all_urls>" ]
   }],
   "description": "This extension removes the ads on the page when you click on the button.",
   "icons": {
      "128": "icon.png",
      "16": "icon.png",
      "48": "icon.png"
   },
   "manifest_version": 2,
   "name": "Chrome Ad Blocker",
   "permissions": [
		"activeTab",
		"<all_urls>"
	],
   "version": "2.7"
}