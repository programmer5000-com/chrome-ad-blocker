{
   "browser_action": {
      "default_icon": "favicon.png",
      "default_popup": "popup.html"
   },
   "content_scripts": [{
		"matches": [
			"<all_urls>"
		],
		"js": [
			"page.js"
		],
		"run_at": "document_end"
   }],
   "description": "This extension removes the ads on the page.",
   "icons": {
      "128": "icon.png",
      "16": "icon.png",
      "48": "icon.png"
   },
   "manifest_version": 2,
   "name": "Chrome Ad Blocker",
   "permissions": [
		"activeTab",
		"<all_urls>"
	],
   "version": "3.1"
}